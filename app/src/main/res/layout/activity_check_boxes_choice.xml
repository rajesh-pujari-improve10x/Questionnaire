<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".CheckBoxesChoiceActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Please select all the correct answers"
        android:textColor="#423F3F"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Which of the following are planets"
        android:textColor="#423F3F"
        android:textSize="16sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/first_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mercury" />

    <CheckBox
        android:id="@+id/second_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sun" />

    <CheckBox
        android:id="@+id/third_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moon" />

    <CheckBox
        android:id="@+id/fourth_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jupiter" />

    <CheckBox
        android:id="@+id/fifth_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturn" />

    <CheckBox
        android:id="@+id/sixth_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pluto" />

    <Button
        android:id="@+id/verify_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Verify"
        android:textAllCaps="false" />
</LinearLayout>